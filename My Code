Using system;
Using system.text;
Using Microsoft.Visualstudio.testtools.unittesting;

Namespace Myproject
{
Public class addition
{
        int a, b;   
        public addition()   //default contructor  
        {  
            a = 100;  
            b = 175;  
        }  
      public  int A, B;  
      public addition(int x, int y)  // decalaring Paremetrized Constructor with ing x,y parameter  
        {  
            A = x;  
            B = y;  
        }  
   
        public static void Main()  
        {  
            addition obj = new addition(); //an object is created , constructor is called  
            Console.WriteLine(obj.a);  
            Console.WriteLine(obj.b);  
            Console.Readkey(); 
            addition v = new addition(100, 175);   // Creating object of Parameterized Constructor  
            Console.WriteLine("\t");  
            Console.WriteLine("value of a=" + v.a );  
            Console.WriteLine("value of b=" + v.b);  
            Console.Readkey();   
        }  
    }  
}  
